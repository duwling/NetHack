# Chance of producing a djinni, granting a wish.
menucolor="[a2-9].*(smoky potion|called.*djinn)"=lightmagenta

# (semi-)permanent engraving
menucolor="a wand.*(fire|lightning)"=no-color&bold
menucolor="(diamond|emerald|ruby|saphire|topaz|steel) ring|a.*ring called.*H"=no-color&bold
#menucolor="a.*ring.*()"=no-color&bold

# Water
menucolor="[a0-9]+ (clear|potion.*water)"=no-color&dim

# Beware of cursed items.
# Don't read the dull spellbook before sleep resistant.
menucolor="a.*(dull spell|book called.*sleep)"=red
#menucolor="a.*spellbook of "=red
menucolor=" cursed|unholy"=red&dim

# Don't pickup a loadstone.
# Never put a wand of cancellation into a bag of holding! Don't nest magic bags!
menucolor="^a.*(load(stone)?$|wand.*cancel)"=red&underline
menucolor="^a.*bag.*(holding|tricks)|named cancel|wand called vanish"=magenta
autopickup_exception=">gray stone"
autopickup_exception=">load"
autopickup_exception="<luck"
autopickup_exception=">rock"
# Worthless glass, named junk
autopickup_exception=">worthless|junk"

